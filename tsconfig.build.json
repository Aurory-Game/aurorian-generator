{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src/sdk",
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "Node",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src/sdk/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "extends": "./tsconfig.json",
}